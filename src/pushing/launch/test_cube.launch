<launch>
  <arg name="marker_size" default="10.0" />
  <arg name="max_new_marker_error" default="0.05" />
  <arg name="max_track_error" default="0.05" />

  <arg name="cam_image_topic"      default="/camera/image_raw" />
  <arg name="cam_info_topic"       default="/camera/camera_info" />

  <arg name="output_frame"         default="/v4l_frame" />
  <arg name="bundle_files" default="$(find ar_track_alvar)/bundles/tags0_5.xml"/>

  <node name="ar_track_alvar" pkg="ar_track_alvar" type="findMarkerBundlesNoKinect" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame) $(arg bundle_files)" />

  <node name="camera" pkg="cv_camera" type="cv_camera_node" >
    <param name="device_id" value="0" />
    <param name="image_width" value="1920" />
    <param name="image_height" value="1080" />
    <param name="frame_id" value="v4l_frame" />
    <param name="camera_info_url" value="package://cv_camera/param/new_camera.yaml"/>
  </node>

  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/camera/image_raw"/>
    <param name="autosize" value="true" />
  </node>
</launch>
